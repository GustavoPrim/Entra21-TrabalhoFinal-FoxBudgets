@model AdministradorEditarViewModel

@{
    var administradores = ViewBag.Administradores as List<string>;
    administradores.Add(string.Empty);

    var selectDosAdministradores = new SelectList(administradores, string.Empty);
}

<h3 class="h3">Editar Administrador - @Model.Nome</h3>

<form asp-action="editar" method="POST">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Nome" class="form-label" span-required=""></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="DataNascimento" class="form-label" span-required=""></label>
        <input asp-for="DataNascimento" class="form-control" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Email" class="form-label" span-required=""></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Telefone" class="form-label" span-required=""></label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Endereco" class="form-label" span-required=""></label>
        <select asp-for="Endereco" asp-items="selectDosAdministradores"
                class="form-select">
        </select>
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>

    <div class="text-end">
        <a asp-action="Index" class="btn btn-outline-danger">
            <i class="fa-solid fa-xmark"></i> Cancelar
        </a>
        <button type="submit" class="btn btn-success">
            <i class="fa-solid fa-floppy-disk"></i> Salvar
        </button>
    </div>

</form>
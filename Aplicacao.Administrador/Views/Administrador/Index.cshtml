@model List<Administrador>

<p class="h3">Lista de Administradores</p>

<div class="row mb-3">
    <div class="text-end">
        <a asp-action="cadastrar" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>Cadastrar
        </a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>

    <tr>
        <th>Nome</th>
        <th>Cpf</th>
        <th>Data de Nascimento</th>
        <th>Endereço</th>
        <th>E-mail</th>
        <th>Telefone</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var administrador in Model)
        {
            <tr>
                <td>@administrador.Nome</td>
                <td>@administrador.Cpf</td>
                <td>@administrador.DataNascimento</td>
                <td>@administrador.Endereco</td>
                <td>@administrador.Email</td>
                <td>@administrador.Telefone</td>
                <td>
                    <a asp-action="editar" asp-route-id="@administrador.Id">Editar</a>
                    <a asp-action="apagar" asp-route-id="@administrador.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model OrcamentoCadastrarViewModel
@{
    var orcamentos = ViewBag.Orcamentos as List<string>;
    orcamentos.Add(string.Empty);

    var selectDosOrcamentos = new SelectList(orcamentos, string.Empty);
}
<p class="h3">Novo orçamento</p>
<form asp-action="cotar" method="POST">

    <div class="mb-3">
        <label asp-for="DataOrcamento" class="form-label" span-required=""></label>
        <input asp-for="DataOrcamento" class="form-control" />
        <span asp-validation-for="DataOrcamento" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Item" class="form-label" span-required=""></label>
        <input asp-for="Item" class="form-control" />
        <span asp-validation-for="Item" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantidade" class="form-label" span-required=""></label>
        <input asp-for="Quantidade" class="form-control" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>

    <div class="text-end">
        <a href="/cliente" class="btn btn-outline-danger">Cancelar</a>
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>

</form>

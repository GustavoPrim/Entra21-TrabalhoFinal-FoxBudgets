@using Repositorio.Entidades
@model List<Estoque>

<p class="h3">Lista de Estoques</p>

<div class="row mb-3">
    <div class="text-end">
        <a asp-action="cadastrar" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>Cadastrar
        </a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>

        <tr>
            <th>Item</th>
            <th>Quantidade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estoque in Model)
        {
            <tr>
                <td>@estoque.MaterialId</td>
                <td>@estoque.Quantidade</td>
                <td>
                    <a class="btn btn-primary" asp-action="editar" asp-route-id="@estoque.Id">
                        <i class="fa-solid fa-pencil"></i> Editar
                    </a>
                    <a class="btn btn-outline-danger" asp-action="apagar" asp-route-id="@estoque.Id">
                        <i class="fa-solid fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@using Servico.ViewModels.Estoque
@model EstoqueCadastrarViewModel
@{
    var estoques = ViewBag.Estoques as List<string>;
    estoques.Add(string.Empty);

    var selectDosEstoques = new SelectList(estoques, string.Empty);
}

<p class="h3">Cadastro de Estoque</p>
<form asp-action="cadastrar" method="POST" class="row g-3">

    <div class="row modal-body">
        <div class="col-6 p-8 form-group">
            <label for="estoqueItem" class="form-label" span-required="">Item</label>
            <select id="estoqueItem" class="form-select"></select>
        </div>


        <div class="p-2 tamanho form-group">
            <label for="estoqueQuantidade" class="form-label" span-required="">Quantidade</label>
            <input id="estoqueQuantidade" class="form-control w-50" />
        </div>

        <div class="p-2 tamanho form-group">
            <label for="estoqueValor" class="form-label" span-required="">Valor</label>
            <input id="estoqueValor" class="form-control w-50" />
        </div>
    </div>
    <div class="col-lg-12" style="text-align: right;">
        <a href="/administrador/administrador" class="btn btn-outline-danger">Cancelar</a>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="botao-adicionar-item">Adicionar</button>
        </div>
    </div>

    <table class="table table-striped table-bordered" id="estoque-table">
        <thead>
            <tr>
                <th>Material</th>
                <th>Quantidade</th>
                <th>Valor</th>
            </tr>
        </thead>
    </table>

    <script src="~/js/jquery.mask.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.mask.min.js"></script>
    <script src="~/js/usuarios/usuarioValidacao.js"></script>
    <script src="~/js/Fornecedor/cotar-select2.js"></script>
    <script src="~/js/Fornecedor/orcamento-cotar.js"></script>
    <script src="~/js/Fornecedor/orcamento-datatable.js"></script>

</form>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>
<script src="https://plentz.github.io/jquery-maskmoney/javascripts/jquery.maskMoney.min.js" type="text/javascript"></script>

<script>
    jQuery(function() {

        jQuery("#valor").maskMoney({
            prefix: 'R$ ',
            thousands: '.',
            decimal: ','
        })

    });
</script>
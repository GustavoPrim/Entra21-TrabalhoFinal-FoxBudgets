@model MateriaisEditarViewModel
@{
    var materiais = ViewBag.Materiais as List<string>;
    materiais.Add(string.Empty);

    var selectDosMateriais = new SelectList(materiais, string.Empty);
}

<form asp-action="editar" method="POST">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Nome" class="form-label" span-required=""></label>
        <input asp-for="Nome" class="form-control" style="text-align: center" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DataValidade" class="form-label"></label>
        <input asp-for="DataValidade" class="form-control" style="text-align: center" />
    </div>

    <div class="mb-3">
        <label asp-for="Sku" class="form-label" span-required=""></label>
        <input asp-for="Sku" class="form-control sku-mask" style="text-align: center" placeholder="ADSSMVR37" onekeydown="upperCaseF(Sku)" />
        <span asp-validation-for="Sku" class="text-danger"></span>
    </div>

    <script>
        function upperCaseF(a) {
            setTimeout(function () {
                a.value = a.value.toUpperCase();
            }, 1);
        }
    </script>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label" span-required="">Descrição</label>
        <input asp-for="Descricao" class="form-control" style="text-align: center" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="col-lg-12" style="text-align: right;">
        <a href="administrador/index" class="btn btn-outline-danger">Cancelar</a>
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
</form>
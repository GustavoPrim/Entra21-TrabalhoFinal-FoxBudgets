@model MateriaisCadastrarViewModel
@{
    var materiais = ViewBag.Materiais as List<string>;
    materiais.Add(string.Empty);

    var selectDosMateriais = new SelectList(materiais, string.Empty);
}
<p class="h3">Cadastro de Materiais</p>
<form asp-action="cadastrar" method="POST" class="row g-3">
    <div>
        <label asp-for="Nome" class="form-label" span-required=""></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Sku" class="form-label" span-required=""></label>
        <input type="text" class="form-control sku-mask" placeholder="XXYY99KK">
        <span asp-validation-for="Sku" class="text-danger"></span>
    </div>

    <script>
        function text(x) {
            if (x == 0)
                document.getElementById("mycode").style.display = "";
            else
                document.getElementById("mycode").style.display = "none";

            return;
        }
    </script>

    <div class="mb-3">
        <div class="input-group">
            <label class="label" name="DataValidade">Possui Data de Validade?</label>
        </div>
        <div class="p-t-10">
            <label class="radio-container m-r-45">
                Sim
                <input type="radio" name="possuiDataValidade" value="false" onclick="text(0)" checked />
                <span class="checkmark"></span>
                <span asp-validation-for="PossuiDataValidade" class="text-danger"></span>
            </label>    <label class="radio-container m-r-45">
                Não
                <input type="radio" name="possuiDataValidade" value="true" onclick="text(1)" />
                <span class="checkmark"></span>
            </label>
        </div>
    </div>
    <div class="mb-3">
        <div class="input-group" id="mycode">
            <input asp-for="DataValidade" class="form-control" />
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label" span-required="Descrição"></label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="col-lg-12" style="text-align: right;">
        <a href="/administrador/index" class="btn btn-outline-danger">Cancelar</a>
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
</form>
@model List<Material>

<p class="h3">Materiais</p>

<div class="row mb-3">
    <div class="text-end">
        <a asp-action="cadastrar" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>Cadastrar
        </a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Sku</th>
            <th>Data de Validade</th>
            <th>Descrição</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var material in Model)
        {
            <tr>
                <td>@material.Nome</td>
                <td>@material.Sku</td>
                @if (material.DataValidade == DateTime.MinValue)
                {
                    <td>Não possui data de validade</td>
                }
                else
                {
                    <td>@material.DataValidade</td>
                }
                <td>@material.Descricao</td>
                <td>
                    <a class="btn btn-primary" asp-action="editar" asp-route-id="@material.Id">
                        <i class="fa-solid fa-pencil"></i> Editar
                    </a>
                    <a class="btn btn-outline-danger" asp-action="apagar" asp-route-id="@material.Id">
                        <i class="fa-solid fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
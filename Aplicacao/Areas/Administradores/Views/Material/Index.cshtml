@model List<Material>

<p class="h3">Lista de Materiais</p>

<div class="row mb-3">
    <div class="text-end">
        <a asp-action="cadastrar" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>Cadastrar
        </a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Sku</th>
            <th>Data de Validade</th>
            <th>Descrição</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var material in Model)
        {
            <tr>
                <td>@material.Nome</td>
                <td>@material.Sku</td>
                <td>@material.DataValidade</td>
                <td>@material.Descricao</td>
                <td>
                    <a asp-action="editar" asp-route-id="@material.Id">Editar</a>
                    <a asp-action="apagar" asp-route-id="@material.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
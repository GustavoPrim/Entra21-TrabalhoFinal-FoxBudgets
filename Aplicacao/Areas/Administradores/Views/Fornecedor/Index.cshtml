@model List<Fornecedor>

<p class="h3">Fornecedores</p>

<div class="row mb-3">
	<div class="text-end">
		<a asp-action="cadastrar" class="btn btn-primary">
			<i class="fa-solid fa-plus"></i>Cadastrar
		</a>
	</div>
</div>

<table class="table table-striped table-bordered">
	<thead>

		<tr>
			<th>Nome</th>
			<th>Cnpj</th>
			<th>Data de Fundação</th>
			<th>Endereço</th>
			<th>E-mail</th>
			<th>Telefone</th>
			<th>Categoria</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var fornecedor in Model)
		{
			<tr>
				<td>@fornecedor.Nome</td>
				<td>@fornecedor.Cnpj</td>
				<td>@fornecedor.DataFundacao.Date</td>
				<td>@fornecedor.Endereco</td>
				<td>@fornecedor.Email</td>
				<td>@fornecedor.Telefone</td>
				<td>@fornecedor.Categoria</td>
				<td>
					<a class="btn btn-primary" asp-action="editar" asp-route-id="@fornecedor.Id">
						<i class="fa-solid fa-pencil"></i> Editar
					</a>
					<a class="btn btn-outline-danger" asp-action="apagar" asp-route-id="@fornecedor.Id">
						<i class="fa-solid fa-trash"></i> Apagar
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
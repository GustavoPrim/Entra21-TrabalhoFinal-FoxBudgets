@model OrcamentoCadastrarViewModel

<p class="h3">Novo orçamento</p>
<form asp-action="cotar" method="POST">

	<div class="row">
		<div class="col-6 p-2">
			<label asp-for="Item" class="form-label" span-required=""></label>
			<select asp-for="Item" class="form-select"></select>
			<span asp-validation-for="Item" class="text-danger"></span>
		</div>

		<div class="p-2">
			<label asp-for="Quantidade" class="form-label" span-required=""></label>
			<input asp-for="Quantidade" class="form-control w-50" />
			<span asp-validation-for="Quantidade" class="text-danger"></span>
		</div>

		<div class="col-6 p-2">
			<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#cadastroPetModal">
				<i class="fa-solid fa-plus"></i> Adicionar
			</button>
		</div>


	</div>

	<table class="table table-striped table-bordered" id="orcamento-table">
		<thead>
			<tr>
				<th>Material</th>
				<th>Quantidade</th>
			</tr>
		</thead>
	</table>

	<div class="mb-3 float-right">
		<a href="/cliente" class="btn btn-outline-danger">Cancelar</a>
		<button type="submit" class="btn btn-success">Cotar</button>
	</div>

</form>


@section Scripts{
	<script src="~/js/clientes/orcamento/cotar-select2.js"></script>
	<script src="~/js/clientes/orcamento/orcamento-datatable.js"></script>
	<script src="~/js/clientes/orcamento/orcamento-cotar.js"></script>
}
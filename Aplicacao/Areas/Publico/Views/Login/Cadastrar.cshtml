@using Servico.ViewModels
@model CadastrarUsuarioViewModel

@{
	Layout = "_LayoutDeslogado";
	ViewData["Title"] = "Cadastrar";
}

<form method="POST">
	<div class="page-content vertical-align-middle">
		<div class="panel">
			<div class="panel-body">
				<form asp-controller="Login" asp-action="Cadastrar" method="POST">

 <div class="mb-3">
        <label asp-for="Nome" class="form-label" span-required=""></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cpf" class="form-label" span-required=""></label>
        <input asp-for="Cpf" class="form-control" />
        <span asp-validation-for="Cpf" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DataNascimento" class="form-label" span-required=""></label>
        <input asp-for="DataNascimento" class="form-control" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Endereco" class="form-label" span-required=""></label>
        <input asp-for="Endereco" class="form-control" />
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label" span-required=""></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Telefone" class="form-label" span-required=""></label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>
					@if (TempData["Message"] != null)
					{
						<p class="text-danger">@TempData["Message"]</p>
					}
					<button type="submit" asp-controller="Administrador" asp-action="Cadastrar" class="btn btn-primary btn-block btn-lg mt-40">Criar conta</button>
                    
    <div class="text-end">
        <a href="/administrador" class="btn btn-outline-danger">Cancelar</a>
    </div>		
				</form>
				<Por>Já possui uma conta cadastrada? <a asp-controller="Login" asp-action="Index">Entre aqui</a><p>
			</div>
		</div>
	</div>
	</div>
</form>
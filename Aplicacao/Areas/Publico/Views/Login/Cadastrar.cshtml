@using Servico.ViewModels
@model CadastrarUsuarioViewModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Cadastrar";
}

<div align="center">
    <div class="page background-image vertical-align text-center">
        <div class="col-auto">
            <div class="col-auto">
                <div class="col-auto">
                    <div class="brand">
                        <form asp-controller="Login" asp-action="Cadastrar" method="POST">
                            <div class="form-group form-material floating" style="margin-top: 15px;">
                                <label asp-for="Nome" class="form-label" span-required=""></label>
                                <input asp-for="Nome" class="form-control" style="text-align:center;" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>

                            <div>
                                <input type="radio" id="radio-cpf" value="Cpf" name="campo-tipo" />
                                <label for="radio-cpf">CPF</label>

                                <input type="radio" id="radio-cnpj" value="Cnpj" name="campo-tipo" />
                                <label for="radio-cnpj">CNPJ</label>
                            </div>

                            <div id="div-cpf" style="block">
                                <label for="Cpf">CPF: </label>
                                <input asp-for="Cpf" class="form-control cpf-mask" style="text-align:center;" placeholder="___.___.___-__" />
                                <span asp-validation-for="Cpf" class="text-danger"></span>
                            </div>  
                            
                            <div id="div-cnpj" style="none">
                                <label for="Cnpj">CNPJ: </label>
                                <input asp-for="Cnpj" class="form-control cnpj-mask" style="text-align:center;" placeholder="__.___.___/____-__" />
                                <span asp-validation-for="Cnpj" class="text-danger"></span>
                            </div>

                            <div class="form-group form-material floating">
                                <label asp-for="DataNascimento" class="form-label" span-required=""></label>
                                <input asp-for="DataNascimento" class="form-control" style="text-align:center;" />
                                <span asp-validation-for="DataNascimento" class="text-danger"></span>
                            </div>

                            <div class="form-group form-material floating">
                                <label asp-for="Endereco" class="form-label" span-required=""></label>
                                <input asp-for="Endereco" class="form-control" style="text-align:center;" />
                                <span asp-validation-for="Endereco" class="text-danger"></span>
                            </div>

                            <div class="form-group form-material floating">
                                <label asp-for="Email" class="form-label" span-required=""></label>
                                <input asp-for="Email" class="form-control" style="text-align:center;" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group form-material floating">
                                <label asp-for="Telefone" class="form-label" span-required=""></label>
                                <input asp-for="Telefone" class="form-control telefone-mask" style="text-align:center;" placeholder="(__) _____-____" />
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>

                            <div class="form-group form-material floating">
                                <label asp-for="Login" class="form-label" span-required=""></label>
                                <input asp-for="Login" class="form-control" style="text-align:center;" />
                                <span asp-validation-for="Login" class="text-danger"></span>
                            </div>

                            <div class="form-group form-material floating">
                                <label asp-for="Senha" class="form-label" span-required=""></label>
                                <input asp-for="Senha" class="form-control" style="text-align:center;" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>

                            @if (TempData["Message"] != null)
                            {
                                <p class="text-danger">@TempData["Message"]</p>
                            }
                            <button type="submit" class="btn btn-primary btn-block btn-lg mt-40">Criar conta</button>

                            <div class="text-end">
                                <a href="/administrador" class="btn btn-outline-danger btn-block btn-lg mt-40">Cancelar</a>
                            </div>
                        </form>
                        <Por>Já possui uma conta cadastrada? <a asp-controller="Login" asp-action="Index">Entre aqui</a><p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById("div-cpf").style.display = "none";
    document.getElementById("div-cnpj").style.display = "none";
    let apresentarCpf = () => {
        document.getElementById("div-cpf").style.display = "block";
        document.getElementById("div-cnpj").style.display = "none";
    }

    let apresentarCnpj = () => {
        document.getElementById("div-cpf").style.display = "none";
        document.getElementById("div-cnpj").style.display = "block";
    }
    document.getElementById("radio-cpf").addEventListener("click", apresentarCpf);

    document.getElementById("radio-cnpj").addEventListener("click", apresentarCnpj);
</script>
@using Repositorio.Entidades
@model List<Cliente>

<p class="h3">Lista de Clientes</p>

<div class="row mb-3">
    <div class="text-end">
        <a asp-action="cadastrar" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>Cadastrar
        </a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>

        <tr>
            <th>Nome</th>
            <th>Cnpj</th>
            <th>Data de Nascimento</th>
            <th>Endereço</th>
            <th>E-mail</th>
            <th>Telefone</th>
            <th>Crea</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Cnpj</td>
                <td>@cliente.DataNascimento</td>
                <td>@cliente.Endereco</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefone</td>
                <td>@cliente.Crea</td>
                <td>
                    <a asp-action="editar" asp-route-id="@cliente.Id">Editar</a>
                    <a asp-action="apagar" asp-route-id="@cliente.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>